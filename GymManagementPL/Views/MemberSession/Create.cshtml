@model CreateMemberSessionViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Booking</h1>

<hr />
<div class="row">
    <div class="d-flex justify-content-center align-items-center h-100">

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Booking Information</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="mb-3">
                            <input hidden readonly asp-for="SessionId" value="@TempData["SessionId"]" />
                            <label class="form-label">Member</label>
                            @* <input name="Phone" type="text" class="form-control" /> *@
                            <select asp-for="MemberId" class="form-select" asp-items="ViewBag.Members">
                                <option value="">-- Select Member --</option>
                               
                            </select>
                            <span asp-validation-for="MemberId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Booking
                            </button>
                            <a asp-action="GetMembersForUpcomingSession" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('#MemberId').select2({
                placeholder: "Select a member",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
